@model IEnumerable<LezzetAtolyesi.Models.YemekTarifleri>

@{
    ViewData["Title"] = "Tarifler";
    Layout = "~/Views/Shared/_yonetimtema.cshtml";
}


<p>
    <a asp-action="TarifEkle"> Yeni Tarif</a>
</p>
<table class="table">
    <thead>
        <tr>
           @*  <th>
                 ID 
            </th>*@
            <th>
                Sıra
            </th>
            <th>
                Kategori
            </th>
            <th>
               Yemek Adı
            </th>
            <th>
                Ekleme Tarihi
            </th>
            <th>
               Aktiflik
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.Sira)
             </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Kategori.Kategoriadi)
                    @* KategoriId yazarsak idye göre listeler *@
            </td>
            @* <td>
                    @Html.DisplayFor(modelItem => item.TarifId)
            </td> *@
            <td>
                    @Html.DisplayFor(modelItem => item.Yemekadi)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Eklemetarihi)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Aktif)
            </td>
            <td>
                <a asp-action="TarifGetir" asp-route-id="@item.TarifId">Düzenle</a> |
                <a asp-action="TarifYorumlari" asp-route-id="@item.TarifId">Yorumlar</a> |
                <a asp-action="TarifSil" asp-route-id="@item.TarifId" onclick = "return confirm('Tarif silinsin mi?')">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>

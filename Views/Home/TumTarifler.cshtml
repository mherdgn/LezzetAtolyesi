<div class="card-container">
    @foreach (var item in Model)
    {
        <div class="card">
            <a asp-action="Tarif" asp-route-id="@item.TarifId">
                <h3>@Html.DisplayFor(modelItem => item.Yemekadi)</h3>
                <p>@Html.DisplayFor(modelItem => item.Eklemetarihi) tarihinde eklendi.</p>
                <p>Kategorisi: @Html.DisplayFor(modelItem => item.Kategori.Kategoriadi)</p>
            </a>
        </div>
    }
</div>
<style>
    .card-container {
        display: flex;
        flex-wrap: wrap;
        gap: 16px;
        justify-content: center;
    }

    .card {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 16px;
        width: 250px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s;
        text-align: center;
    }

        .card:hover {
            transform: scale(1.05);
        }

        .card a {
            text-decoration: none;
            color: inherit;
        }

        .card h3 {
            margin: 0;
            font-size: 1.2em;
            color: #333;
        }

        .card p {
            font-size: 0.9em;
            color: #666;
        }

</style>